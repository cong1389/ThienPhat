<!---GetHomeIntro--->
@using App.Domain.Entities.Menu

<div id="vnt-home-about" class="lazyloading">
    <div class="wrapper">
        <div class="container">
            <div class="row">
                <div class="col-sm-6">
                    <div class="portlet">
                        <div class="title"><span>@Model.Title</span></div>

                        <div class="content desc">
                            @Html.Raw(Model.ShortDesc)
                            <a class="view" href="@Url.Action("GetContent", "Menu", new { menu = ViewBag.objMenuLinkIntro !=null? ((MenuLink)ViewBag.objMenuLinkIntro).SeoUrl: "", area = "" })"><span>@T("XemThem")</span></a>
                        </div>
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="video">
                        <div id="loadvideo" onclick="loadVideo();">
                            <img src="@Url.Content("~/"+ Model.ImagePath)" alt="@Model.Title" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!---/GetHomeIntro--->