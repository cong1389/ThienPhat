@model App.Domain.Entities.GlobalSetting.ContactInfomation
<div class="container">
    <div class="row">
        <div class="col-sm-5">
            <div class="address">
                <h2>Thông tin liên hệ</h2>
                <div class="address-content">
                    @if (Model != null)
                    {
                        <ul class="list-unstyled">
                            <li>
                                <div class="icon-item">
                                    <span class="fa-stack fa-sms">
                                        <i class="fa fa-circle-thin fa-stack-2x"></i>
                                        <i class="fa fa-phone fa-stack-1x"></i>
                                    </span>
                                </div>
                                <div class="content-item">
                                    <div class="text">
                                        <label>Điện thoại:</label>
                                    </div>
                                    <b>@Model.Hotline</b>
                                </div>
                            </li>
                            <li>
                                <div class="icon-item">
                                    <span class="fa-stack fa-sms">
                                        <i class="fa fa-circle-thin fa-stack-2x"></i>
                                        <i class="fa fa-map-marker fa-stack-1x"></i>
                                    </span>
                                </div>
                                <div class="content-item">
                                    <p>Địa chỉ:</p>
                                    <p class="add">
                                       @Model.Address
                                    </p>
                                    <b>@Model.MobilePhone</b>
                                </div>
                            </li>
                            <li>
                                <div class="icon-item">
                                    <span class="fa-stack fa-sms">
                                        <i class="fa fa-circle-thin fa-stack-2x"></i>
                                        <i class="fa fa-envelope-o fa-stack-1x"></i>
                                    </span>
                                </div>
                                <div class="content-item">
                                    <p>@Model.Email</p>
                                </div>
                            </li>
                        </ul>
                    }
                    
                </div>
            </div>
        </div>
        <div class="col-sm-7">
            <div class="form-contact">
                <h2>Gửi tin nhắn</h2>
                <div class="form">
                    <div class="row">
                        <div class="col-sm-6">
                            <div class="form-group">
                                <input type="text" placeholder="Họ tên:*" class="form-control" />
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <input type="text" placeholder="Email:*" class="form-control" />
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <textarea class="form-control" rows="5" placeholder="Nội dung:*"></textarea>
                        <div class="icon-comment"></div>
                    </div>
                    <div class="form-action">
                        <button type="button" class="btn btn-default">Gửi tin nhắn</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 