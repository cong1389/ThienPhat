@using App.Front.Models
@using App.Utils
@{
    List<BreadCrumb> breadCrumbs = Model is List<BreadCrumb> ? Model : ViewBag.BreadCrumb as List<BreadCrumb>;
    
    <div class="breadcrumb">
        <div class="container">
            <ul class="list-inline">
                <li>
                    <a href="@Url.Action("Index", "Home", new {area = ""})" class="home-link">
                        <i class="icon_home"></i>
                    </a>
                </li>
               @if (breadCrumbs.IsAny())
               {
                   foreach (var item in breadCrumbs)
                   {
                       if (!item.Current)
                       {
                        <li>
                            <a href="@item.Url" class="home-link">
                               @item.Title
                            </a>
                        </li>
                       }
                       else
                       {
                        <li class="active">
                            <span>@item.Title</span>
                        </li>
                       }
                   }
               }
               
            </ul>
        </div>
    </div>
}
