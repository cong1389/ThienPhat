@model App.FakeEntity.Order.OrderViewModel
<div id="form-flow" class="flow-form">
    <div class="container">
        <div class="row">
            <div class="col-sm-12">
                <div id="msg-success" class="alert alert-success hide"></div>
                <div id="msg-error" class="alert alert-danger hide"></div>
            </div>
            <div class="col-sm-6">
                <p class="col-sm-offset-3 col-sm-9 text-center">
                    ĐÁNH GIÁ TÌNH TRẠNG SẢN PHẨM
                </p>
                <div class="form-horizontal">
                    @using (Html.BeginForm("CheckProduct", "Home", FormMethod.Post, new {enctype = "multipart/form-data", id = "checking"}))
                    {
                        <div class="form-group">
                            <label class="col-sm-3 control-label">Thương hiệu</label>
                            <div class="col-sm-9">
                                @Html.DropDownListFor(x => x.BrandId, new SelectList(ViewBag.Brands, "Id", "Name"), new {@class = "form-control "})
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 control-label">Dòng máy</label>
                            <div class="col-sm-9">
                                @Html.TextBoxFor(model => model.ModelBrand, new {@class = "form-control"})
                                @Html.ValidationMessageFor(model => model.StoreName, "", new {@class = "help-block"})
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 control-label">Số seri</label>
                            <div class="col-sm-9">
                                @Html.TextBoxFor(model => model.SerialNumber, new {@class = "form-control"})
                                @Html.ValidationMessageFor(model => model.SerialNumber, "", new {@class = "help-block"})
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 control-label">Họ tên</label>
                            <div class="col-sm-9">
                                @Html.TextBoxFor(model => model.CustomerName, new {@class = "form-control"})
                                @Html.ValidationMessageFor(model => model.CustomerName, "", new {@class = "help-block"})
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 control-label">Số điện thoại</label>
                            <div class="col-sm-9">
                                @Html.TextBoxFor(model => model.PhoneNumber, new {@class = "form-control"})
                                @Html.ValidationMessageFor(model => model.PhoneNumber, "", new {@class = "help-block"})
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 control-label">Nội dung sửa chữa</label>
                            <div class="col-sm-9">
                                @Html.TextAreaFor(model => model.Note, new {@class = "form-control", @rows = 5})
                                @Html.ValidationMessageFor(model => model.Note, "", new {@class = "help-block"})
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 control-label">Hình ảnh</label>
                            <div class="col-sm-9">
                                <input type="file" name="files[]" id="filer_check_multiple" multiple="multiple">
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-offset-3 col-sm-9 text-center">
                                <button id="CheckProduct" type="submit" class="btn btn-lg btn-primary">Gửi thông tin</button>
                            </div>
                        </div>
                    }

                </div>
            </div>
            <div class="col-sm-6">
                <p class="col-sm-offset-3 col-sm-9 text-center">
                    Định giá và thu mua SẢN PHẨM
                </p>
                <div class="form-horizontal">
                    @using (Html.BeginForm("BuyProduct", "Home", FormMethod.Post, new {enctype = "multipart/form-data", id = "formbuy"}))
                    {
                        <div class="form-group">
                            <label class="col-sm-3 control-label">Thương hiệu</label>
                            <div class="col-sm-9">
                                @Html.DropDownListFor(x => x.BrandId, new SelectList(ViewBag.Brands, "Id", "Name"), new {@class = "form-control "})
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 control-label">Dòng máy</label>
                            <div class="col-sm-9">
                                @Html.TextBoxFor(model => model.ModelBrand, new {@class = "form-control"})
                                @Html.ValidationMessageFor(model => model.StoreName, "", new {@class = "help-block"})
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 control-label">Số seri</label>
                            <div class="col-sm-9">
                                @Html.TextBoxFor(model => model.SerialNumber, new {@class = "form-control"})
                                @Html.ValidationMessageFor(model => model.SerialNumber, "", new {@class = "help-block"})
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 control-label">Giá bán</label>
                            <div class="col-sm-9">
                                @Html.TextBoxFor(model => model.FixedFee, new {@class = "form-control"})
                                @Html.ValidationMessageFor(model => model.FixedFee, "", new {@class = "help-block"})
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 control-label">Tình trạng</label>
                            <div class="col-sm-9">
                                @Html.TextAreaFor(model => model.PhoneStatus, new {@class = "form-control", @rows = 8})
                                @Html.ValidationMessageFor(model => model.PhoneStatus, "", new {@class = "help-block"})
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 control-label">Hình ảnh</label>
                            <div class="col-sm-9">
                                <input type="file" name="files[]" id="filer_buy_multiple" multiple="multiple">
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-offset-3 col-sm-9 text-center">
                                <button id="BuyProduct" type="submit" class="btn btn-lg btn-primary">Gửi thông tin</button>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
