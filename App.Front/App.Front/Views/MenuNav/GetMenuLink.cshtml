@using App.Domain.Common
@using App.Front.Models
@using App.Utils
@using App.Domain.Entities.Menu
@using Resources
@using App.Front.Helpers
@model IEnumerable<MenuNav>

@if (Model != null)
{
    int i = 0;

    <nav id="vnt-menutop"  class="navbar navbar-default navbar-static-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
               
            </div>
            <div id="navbar" class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    @foreach (MenuNav item in Model)
                    {
                        var home = i == 0 ? "home" : "";
                        <li class="@home"><a href="@Url.Action("GetContent", "Menu", new {menu = item.SeoUrl, area = ""})">@item.MenuName </a></li>
                    }
                    
                </ul>
                
            </div><!--/.nav-collapse -->
        </div>
    </nav>    
}

