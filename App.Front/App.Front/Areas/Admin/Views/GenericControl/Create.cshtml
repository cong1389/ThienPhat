@using App.Domain.Common
@using Resources
@model App.FakeEntity.GenericControl.GenericControlViewModel
@{
    ViewBag.Title = UI.CreateNew;
    ViewBag.Toolbar = new[] { "Save", "SaveNew", "Divider", "Back" };
}
@using (Html.BeginForm("Create", "GenericControl", FormMethod.Post, new { data_container = ViewContext.RouteData.Values["controller"], enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    Html.RenderPartial("_CreateOrUpdate", Model);
}

@section scripts{
<script>
        //Copy value từ tên sản phẩm bỏ vào group SEO
        function CopyValue() {
            $("#Locales_0__Name").change(function () {
                var name = $("#Locales_0__Name").val();
                if (name != "") {
                    $("#Name").val(name);
                }
            });
        }

        $(function () {
            CopyValue();
        });
</script>
    }
