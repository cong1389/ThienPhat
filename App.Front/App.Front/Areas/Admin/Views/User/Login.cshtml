@using App.FakeEntity.User
@using App.Framework.Ultis
@model LoginViewModel
@{
    ViewBag.Title = "Đăng nhập quản trị";
    Layout = Url.FakePathAdmin("Views/Shared/_LayoutLogin.cshtml");
}
<!-- BEGIN LOGIN FORM -->

@using (Html.BeginForm("Login", "User", FormMethod.Post, new { @class = "login-form", ReturnUrl = ViewBag.ReturnUrl }))
{
    @Html.AntiForgeryToken()
    <h3 class="form-title font-green">Đăng nhập quản trị</h3>
    <div class="alert alert-danger display-hide">
        <button class="close" data-close="alert"></button>
        <span> Vui lòng nhập tên đăng nhập và mật khẩu. </span>
    </div>
    @Html.ValidationSummary(true)
    <div class="form-group">
        @Html.LabelFor(x => x.UserName, new { @class = "control-label visible-ie8 visible-ie9" })
        @Html.TextBoxFor(x => x.UserName, new { @class = "form-control form-control-solid placeholder-no-fix", autocomplete = "off", @placeholder = Html.DisplayNameFor(n => n.UserName) })
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.Password, new { @class = "control-label visible-ie8 visible-ie9" })
        @Html.PasswordFor(x => x.Password, new { @class = "form-control form-control-solid placeholder-no-fix", autocomplete = "off", @placeholder = Html.DisplayNameFor(n => n.Password) })
    </div>
    <div class="form-actions">
        <button type="submit" class="btn green uppercase">Đăng nhập</button>
        <label class="rememberme check mt-checkbox mt-checkbox-outline">
            @Html.CheckBoxFor(x => x.Remember) Ghi nhớ
            <span></span>
        </label>
        @*<a href="javascript:;" id="forget-password" class="forget-password">Forgot Password?</a>*@
    </div>
}
