<script type="text/javascript">

        //Copy value từ tên sản phẩm bỏ vào group SEO
    function CopyValue() {
        $("#Locales_0__Title").change(function () {
            var name = $("#Locales_0__Title").val();
            if (name != "") {
                $("#Locales_0__MetaTitle").val(name);
                $("#Locales_0__MetaKeywords").val(name);
                $("#Locales_0__MetaDescription").val(name);

                $("#Title").val(name);
                $("#MetaTitle").val(name);
                $("#MetaKeywords").val(name);
                $("#MetaDescription").val(name);
            }
        });

        $("#Locales_1__Title").change(function () {
            var name = $("#Locales_1__Title").val();
            if (name != "") {
                $("#Locales_1__MetaTitle").val(name);
                $("#Locales_1__MetaKeywords").val(name);
                $("#Locales_1__MetaDescription").val(name);
            }
        });

        $("#Locales_3__Title").change(function () {
            var name = $("#Locales_3__Title").val();
