@using App.Domain.Common
@using App.Framework.Ultis
@using Resources
@model App.FakeEntity.Static.StaticContentViewModel
@{
    ViewBag.Title = UI.CreateNew;
    ViewBag.Toolbar = new[] { "Save", "SaveNew", "Divider", "Back" };
}
@using (Html.BeginForm("Edit", "StaticContent", FormMethod.Post, new { data_container = ViewContext.RouteData.Values["controller"], enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(x=>x.Id)
    @Html.HiddenFor(x=>x.ImagePath)

    Html.RenderPartial("_CreateOrUpdate", Model);
}

